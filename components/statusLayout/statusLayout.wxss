/* components/statusLayout/statusLayout.wxss */

.status-layout-root{
    width: 100%;
    height: 100%;
    font-family: PingFangSC-Light;
    display: flex; 
    justify-content: center; 
    align-items: center;
}

.status-main{
    text-align: center;
    font-size: 14px;
    color: #bfbfbf;
    letter-spacing: -0.01px;
    align-self: center;
    font-weight: bold;
}

.status-main image{
    margin-bottom: 10px;
}

.status-image{
    width: 137px; 
    height: 142px; 
}

.status-image-anim{
  animation: weuiLoading 0.6s steps(12, end) infinite;
}

@keyframes weuiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}