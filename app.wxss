/**app.wxss**/
.page{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.view-root{
  font-size: 14px;
  height:100%;
  font-family: Arial, Helvetica, sans-serif;
  color: #3c3c3c;
  width:100%;
  position:  absolute
}

/*flex排列布局*/
.spaceBetween {
	display: flex;
	justify-content: space-between;
	align-items: center;
	flex-wrap: wrap;
}

.spaceAround {
	display: flex;
	justify-content: space-around;
	align-items: center;
	flex-wrap: wrap;
}

.spaceLeft {
	display: flex;
	justify-content: flex-start;
	align-items: center;
	flex-wrap: wrap;
}

.spaceRight {
	display: flex;
	justify-content: flex-end;
	align-items: center;
	flex-wrap: wrap;
}

.spaceCenter {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-wrap: wrap;
}

.flexStart{
	display: flex;
	justify-content: flex-start;
	align-items: flex-start;
	flex-wrap: wrap;
}